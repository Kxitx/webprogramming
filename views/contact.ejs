<%- include("partials/header") -%>

<%- include("partials/title") -%>

<div class="container-fluid">
  <div class="row">
    <div class="contact-form col-lg-8 col-md-12">

      <!-- CONTACT FORM -->

      <form method="POST" action="send">
        <div class="form-group">
          <label class="form-text text-left">Name</label>
          <input type="name" name="name" class="form-control" id="inputName">
        </div>
        <div class="form-group">
          <label class="form-text text-left">Email</label>
          <input type="email" name="email" class="form-control" id="inputEmail">
          <small class="form-text text-muted text-left">We will never share your email with someone else!</small>
        </div>
        <div class="form-group">
          <label class="form-text text-left">Subject</label>
          <input type="subject" name="subject" class="form-control" id="inputSubject">
        </div>
        <div class="form-group">
          <label class="form-text text-left">Your message</label>
          <textarea class="form-control" name="message" id="inputTextarea" rows="5"></textarea>
        </div>
        <div class="text-left">
          <button type="submit" class="btn btn-secondary">Submit</button>
        </div>
        <br>
        <p> Your data will be used according to our data policy.</p>
        <p class="contact-status"> <%= msg %> </p>
      </form>
    </div>


    <!-- GOOGLE MAPS -->

    <div class="col-lg-4 col-md-12 map-class">
      <div id="map-container-google-4">
        <iframe src="https://maps.google.com/maps?q=mannheim%20coblitzalle&t=&z=13&ie=UTF8&iwloc=&output=embed"
          width=100% height=300px frameborder="0" style="border:0" allowfullscreen></iframe>

        <!-- Address -->

        <p class="lead text-center map-lead-text">RentBike Mannheim</p>
        <p class="text-center"> Coblitzallee 1-9</p>
        <p class="text-center"> 68163 Mannheim</p>
      </div>
    </div>
  </div>
</div>

<%- include("partials/footer") -%>